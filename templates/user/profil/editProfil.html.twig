{% extends 'base.html.twig' %}

{% block title %}Modification du profil de
	{{ app.user.FirstName }}
	{{ app.user.LastName }}
{% endblock %}

{% block body %}
	<div class="mx-auto vh-100 row align-items-center" style="width: 600px;">
		<div class="card">
			<div class="card-body flex flex-column">
				<div class="text-center">
					<h1>Modification du profil:</h1>
				</div>
				{{form_start(form)}}
				<div class="form-group">
					<div class="form-label">
						{{ form_label(form.lastName)}}
					</div>
					{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}})}}
				</div>
				<div class="form-group">
					<div class="form-label">
						{{ form_label(form.firstName)}}
					</div>
					{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}})}}
				</div>
				<div class="form-group">
					<div class="form-label">
						{{ form_label(form.Valider)}}
					</div>
					{{ form_widget(form.Valider, {'attr': {'class': 'btn btn-success'}})}}
					<a class="btn btn-danger" href="{{path('user_profil')}}">Annuler
					</a>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	{% endblock %}
